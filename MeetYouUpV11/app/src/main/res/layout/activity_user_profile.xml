<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfile.UserProfileActivity">

        <ImageView
            android:id="@+id/userProfileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="15dp"
            android:src="@drawable/noimageuser" />

        <TextView
            android:id="@+id/userProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProfileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Andrei Matea"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/userProfileDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProfileName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Description of the profile"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/userProfileDateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProfileDesc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Born on: 05/08/1996"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/userProfileKeyWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProfileDateOfBirth"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Key words:  204,show,teatru,toate cele bune"
            android:textSize="15dp" />

        <Button
            android:id="@+id/userProfileGoToDashboard"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProfileKeyWords"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="30dp"
            android:background="#263238"
            android:elevation="15dp"
            android:text="Go to Dasboard" />

    </RelativeLayout>
</ScrollView>