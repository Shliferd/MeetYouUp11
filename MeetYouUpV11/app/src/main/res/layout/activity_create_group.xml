<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/createGroupTextView"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:text="Here you setup all the details about your new group"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/createGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createGroupTextView"
            android:layout_margin="10dp"
            android:hint="Enter group name"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/createGroupDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createGroupName"
            android:layout_margin="10dp"
            android:hint="Enter group description"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnUploadGroupPhoto"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createGroupDescription"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:background="#263238"
            android:text="Upload profile picture" />

        <ImageView
            android:id="@+id/imageViewCreateGroup"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/btnUploadGroupPhoto"
            android:layout_marginHorizontal="85dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/noimageuser" />

        <Button
            android:id="@+id/btnContinueGroup"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewCreateGroup"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:background="#263238"
            android:text="Continue" />

    </RelativeLayout>

</ScrollView>