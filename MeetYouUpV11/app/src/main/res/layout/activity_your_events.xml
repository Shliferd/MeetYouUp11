<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Event.YourEventsActivity">

    <TextView
        android:id="@+id/textViewYourEvents"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Here you can see all events you've created"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAddEvent"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewYourEvents"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="#263238"
        android:text="Create new event" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewYourEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnAddEvent"
        android:layout_marginTop="30dp" />

</RelativeLayout>