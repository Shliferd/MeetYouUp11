<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event.EventInfoActivity">\

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/eventInfoCoverImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/eventInfoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnDeleteEvent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Event name"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/eventInfoManage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventInfoName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="MANAGE"
            android:textColor="#1E90FF"
            android:textSize="20sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDeleteEvent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventInfoCoverImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#263238"
            android:padding="10dp"
            android:text="Delete group" />

        <LinearLayout
            android:id="@+id/linearLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventInfoManage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/joinTextView"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#588fe8"
                android:clickable="true"
                android:gravity="center"
                android:text="JOIN"
                android:textColor="#000"
                android:textSize="25dp" />

            <View
                android:id="@+id/separatorView"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="#c4c8c9" />

            <TextView
                android:id="@+id/declineTextView"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#e52020"
                android:clickable="true"
                android:gravity="center"
                android:text="DECLINE"
                android:textColor="#000"
                android:textSize="25dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/seeChoiceTextView"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLay"
            android:layout_centerHorizontal="true"
            android:background="#588fe8"
            android:gravity="center"
            android:text="GOING"
            android:textColor="#000"
            android:textSize="25dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/eventInfoDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seeChoiceTextView"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Event description, maybe long"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventInfoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventInfoDesc"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Event due to:  06/07/2018"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventInfoKeyWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventInfoDate"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Events key words:  204,teatru,show,etc."
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventInfoLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventInfoKeyWords"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Location:  Parcul Rozelor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventInfoCurrentMemebers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventInfoLocation"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="14 members going"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventInfoSeeMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventInfoLocation"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/eventInfoCurrentMemebers"
            android:clickable="true"
            android:text="See members"
            android:textColor="#1E90FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventInfoLimitNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventInfoCurrentMemebers"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="This event has a limit number of 25 users"
            android:textSize="20sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLayInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventInfoLimitNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/inviteTextView"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#3e98dd"
                android:clickable="true"
                android:gravity="center"
                android:text="INVITE"
                android:textColor="#000"
                android:textSize="25dp" />

            <View
                android:id="@+id/separatorView2"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="#c4c8c9" />

            <TextView
                android:id="@+id/shareTextView"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#3e98dd"
                android:clickable="true"
                android:gravity="center"
                android:text="SHARE"
                android:textColor="#000"
                android:textSize="25dp" />

        </LinearLayout>

    </RelativeLayout>


</ScrollView>