<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewGroup"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Here you can see all your groups"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAddGroup"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewGroup"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="5dp"
            android:background="#263238"
            android:text="Create new group" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAddGroup" />

        <Button
            android:id="@+id/btnSeeYourGroups"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerViewGroup"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="5dp"
            android:background="#263238"
            android:text="View created groups" />

    </RelativeLayout>

</ScrollView>